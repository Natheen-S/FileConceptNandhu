<Page x:Class="FileConcept.diarypage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FileConcept"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DiaryPage">

    <StackPanel >
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Month-Date" Height="45" Width="200" Margin="40,10,10,10" FontSize="25" FontWeight="DemiBold" HorizontalContentAlignment="Center"/>
            <TextBox x:Name="txtbox_date" Height="45" Width="250" Background="Transparent" BorderThickness="3" BorderBrush="Lavender"/>
        </StackPanel>

        <StackPanel>
            <TextBox x:Name="txtbox_content" Height="326" Width="694" AcceptsReturn="True" FontSize="20" FontWeight="Heavy" Background="Transparent"  BorderThickness="3" BorderBrush="Lavender"/>
            
        </StackPanel>
        <StackPanel Margin="0,15,0,0">
            <Button x:Name="btn_create" Content="Save"  Background="Transparent" Height="45" Width="150"  BorderThickness="3" BorderBrush="Lavender" />
        </StackPanel>
    </StackPanel>
    
</Page>
